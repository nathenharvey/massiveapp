<h1>Listing shares</h1>

<table>
  <tr>
    <th>Bookmark</th>
    <th>Shared by</th>
    <th>Shared with</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @shares.each do |share| %>
  <tr>
    <td><%= share.bookmark_id %></td>
    <td><%= share.shared_by %></td>
    <td><%= share.shared_with %></td>
    <td><%= link_to 'Show', share %></td>
    <td><%= link_to 'Edit', edit_share_path(share) %></td>
    <td><%= link_to 'Destroy', share, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

